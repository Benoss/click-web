<!doctype html>
<html lang="en">
<head>
    <title>{{ command.name }}</title>
</head>
<body>
<h1>{{ command.name }}</h1>
<form action="/exec/{{ command_path }}" method="post">
    {% for field in fields %}
        {{ field['human_readable_name'] }}
        {% for arg in range(field['nargs']) %}
            <input type="{{ field['type'] }}"
                   name="{{ field['name'] }}"
                   value="{{ field['value'] }}"
                    {{ field['checked'] }}>
            <br>
        {% endfor %}
    {% endfor %}
    <input type="submit" value="Submit">
</form>

</body>
</html>